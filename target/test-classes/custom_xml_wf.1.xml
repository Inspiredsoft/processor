<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:wf="http://www.inspiredsoft.it/schema/workflow"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://www.inspiredsoft.it/schema/workflow
    http://www.inspiredsoft.it/schema/workflow.xsd">

	<wf:workflow id="workflow" name="Workflow" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
		<wf:sequence id="sequence" name="Sequence process" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
			<wf:activity class="it.inspired.wf.Calculator" method="sum" result="sum1" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
				<wf:parameter name="addendum1" />
				<wf:parameter name="addendum2" />
			</wf:activity>
			<wf:activity class="it.inspired.wf.Calculator" method="sum" result="sum2" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
				<wf:parameter name="sum1" />
				<wf:parameter name="sum1" />
			</wf:activity>
		</wf:sequence>
		<wf:concurrent id="concurrent" name="Concurrent process" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
			<wf:activity class="it.inspired.wf.Calculator" method="sum" result="sum1" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
				<wf:parameter name="addendum1" />
				<wf:parameter name="addendum2" />
			</wf:activity>
			<wf:activity class="it.inspired.wf.Calculator" method="mult" result="mult" errorHandler="it.inspired.wf.impl.ConsoleErrorHandler">
				<wf:parameter name="addendum1" />
				<wf:parameter name="addendum2" />
			</wf:activity>
		</wf:concurrent>
	</wf:workflow>
</beans>